<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="DotaFantasyApp.Views.MatchList">

    <CollectionView ItemsSource="{Binding Matches}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="White" Padding="5">
                <StackLayout HeightRequest="100">
                    <!--<BoxView HeightRequest="30" BackgroundColor="Red" Margin="0,0,0,-6"/>
                    <BoxView HeightRequest="100" BackgroundColor="Silver" Margin="0,0,0,5"/>-->
                        <Label Text="{Binding Name}" HorizontalTextAlignment="Center" VerticalTextAlignment="Start"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>